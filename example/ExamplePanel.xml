<Panel>
    <GroupBox title="基本的设置">
        <CheckBox title="启用功能" var="chkEnable" default="1"/>
        <LineEdit title="数值" var="txtValue" default="100" visible="$chkEnable==1" valid="double"/>
        <ComboBox title="模式" var="cboMode" default="0">
            <Choice q-for="(item, idx) in modes" text="$item.label" val="$idx"/>
        </ComboBox>
        <SpinBox title="数量" var="spnCount" min="0" max="1000" default="10"/>
    </GroupBox>
    
    <GroupBox title="高级选项" visible="$cboMode==1">
        <CheckBox title="选项A" var="chkOptionA"/>
        <CheckBox title="选项B" var="chkOptionB"/>
        <LineEdit title="参数" var="txtParam" visible="$chkOptionA==1"/>
    </GroupBox>
    
    <GroupBox title="滑块和进度条">
        <Slider title="音量" var="volume" min="0" max="100" default="50" ticks="below" tickInterval="10"/>
        <ProgressBar title="进度" var="progress" min="0" max="100" default="0"/>
    </GroupBox>
    <HLayoutWidget>
        <PushButton text="应用" var="btnApply"/>
        <PushButton text="取消" var="btnCancel"/>
    </HLayoutWidget>
</Panel>
